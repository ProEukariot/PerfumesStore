@model List<OrderStaffViewModel>

@{
	int i = 0;
}

<div class="container">
	@await Component.InvokeAsync("Options")

	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Status</th>
				<th scope="col">Total</th>
				<th scope="col">Crated at</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var order in Model)
			{
				<tr>
					<th scope="row">@(++i)</th>
					<td>@order.Status</td>
					<td>@order.Total</td>
					<td>@order.Created_at.ToString("yy/MM/dd hh:mm:ss")</td>
					<td>
						<form method="post" asp-action="FinishPacking">
							<input type="hidden" name="id" value="@order.Id">
							<input type="submit" value="Finished" class="btn btn-outline-warning">
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

