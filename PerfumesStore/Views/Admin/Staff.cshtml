@model IEnumerable<PerfumesStore.Models.StaffMember>

@{
	int i = 0;
}

@await Component.InvokeAsync("Options")


@if (Context.Response.StatusCode == 201)
{
	<div class="alert alert-success my-2" role="alert">
		The action was proceeded succesful!
	</div>
}

<div class="mt-3 table-responsive">
	<table class="table table-bordered border-primary">
		<thead>
			<tr>
				<th class="text-center" scope="col">#</th>
				<th class="text-center" scope="col">Username</th>
				<th class="text-center" scope="col">Email</th>
				<th class="text-center" scope="col">Address</th>
				<th class="text-center" scope="col">Created at</th>
				<th class="text-center" scope="col"></th>
				<th class="text-center" scope="col"></th>

			</tr>
		</thead>
		<tbody>
			@foreach (var member in Model)
			{
				<tr>
					<th class="text-center" scope="row">@(++i)</th>
					<td class="text-center">@member.Username</td>
					<td class="text-center">@member.Email</td>
					<td class="text-center">@member.Address</td>
					<td class="text-center">@member.Created_at</td>
					<td class="text-center">
						<a class="btn btn-outline-warning w-100" asp-action="CheckWork" asp-route-id="@member.Id">
							CheckWork
						</a>
					</td>
					<td class="text-center">
						<form asp-action="FireStaff" method="post">
							<input type="hidden" name="id" value="@member.Id" Fire />
							<input class="btn btn-danger w-100" type="submit" value="Fire">
						</form>
					</td>
				</tr>
			}
			<tr>
				<th class="text-center" scope="row">@(++i)</th>
				<td class="text-center">-----</td>
				<td class="text-center">-----</td>
				<td class="text-center">-----</td>
				<td class="text-center">-----</td>
				<td class="text-center">-----</td>

				<td class="text-center">
					<a class="btn btn-success w-100" asp-action="AddStaff">Add member</a>
				</td>
			</tr>
		</tbody>
	</table>
</div>