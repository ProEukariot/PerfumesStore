@model PerfumesStore.Models.ItemsSubmitViewModel

<div class="container shadow rounded-3 p-3">
	<h2>Add item</h2>
	<hr />

	<ul class="nav nav-tabs" role="tablist">
		<li class="nav-item" role="presentation">
			<button class="nav-link active" id="perfume-tab" data-bs-toggle="tab" data-bs-target="#perfume" type="button" role="tab">Perfume</button>
		</li>
		<li class="nav-item" role="presentation">
			<button class="nav-link" id="giftpack-tab" data-bs-toggle="tab" data-bs-target="#giftpack" type="button" role="tab">GiftPack</button>
		</li>
	</ul>

	<div class="tab-content">
		<div class="tab-pane fade show active" id="perfume" role="tabpanel">
			<form class="form" method="post" asp-action="AddItem">
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="Perfume.Name"></label>
					<div class="col">
						<input class="form-control" type="text" asp-for="Perfume.Name" />
					</div>
				</div>
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="Perfume.Brand"></label>
					<div class="col">
						<input class="form-control" type="text" asp-for="Perfume.Brand" />
					</div>
				</div>
				<div class="row m-3">
					<label asp-for="Perfume.State" class="form-label"></label>
					<div class="form-check">
						<input class="form-check-input" asp-for="Perfume.State" type="radio" name="Perfume.State" value="Male" id="stateRadio2">
						<label class="form-check-label" for="stateRadio2">
							Male
						</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" asp-for="Perfume.State" type="radio" name="Perfume.State" value="Female" id="stateRadio3">
						<label class="form-check-label" for="stateRadio3">
							Female
						</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" asp-for="Perfume.State" type="radio" name="Perfume.State" value="Unisex" id="stateRadio4">
						<label class="form-check-label" for="stateRadio4">
							Unisex
						</label>
					</div>
				</div>
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="Perfume.Price"></label>
					<div class="col">
						<input class="form-control" type="number" asp-for="Perfume.Price" />
					</div>
				</div>
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="Perfume.Desc"></label>
					<div class="col">
						<input class="form-control" type="text" asp-for="Perfume.Desc" />
					</div>
				</div>
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="Perfume.Quantity"></label>
					<div class="col">
						<input class="form-control" type="number" asp-for="Perfume.Quantity" />
					</div>
				</div>
				<div class="d-grid">
					<input class="btn btn-light shadow-sm" type="submit" value="submit" />
				</div>

				<div asp-validation-summary="All"></div>
			</form>
		</div>
		<div class="tab-pane fade" id="giftpack" role="tabpanel">
			<form class="form" method="post" asp-action="AddItem">
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="GiftPack.Name"></label>
					<div class="col">
						<input class="form-control" type="text" asp-for="GiftPack.Name" />
					</div>
				</div>
				<div class="row m-3">
					<label asp-for="GiftPack.State" class="form-label"></label>
					<div class="form-check">
						<input class="form-check-input" asp-for="GiftPack.State" type="radio" name="GiftPack.State" value="Male" id="stateRadio2">
						<label class="form-check-label" for="stateRadio2">
							Male
						</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" asp-for="GiftPack.State" type="radio" name="GiftPack.State" value="Female" id="stateRadio3">
						<label class="form-check-label" for="stateRadio3">
							Female
						</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" asp-for="GiftPack.State" type="radio" name="GiftPack.State" value="Unisex" id="stateRadio4">
						<label class="form-check-label" for="stateRadio4">
							Unisex
						</label>
					</div>
				</div>
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="GiftPack.Price"></label>
					<div class="col">
						<input class="form-control" type="number" asp-for="GiftPack.Price" />
					</div>
				</div>
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="GiftPack.Desc"></label>
					<div class="col">
						<input class="form-control" type="text" asp-for="GiftPack.Desc" />
					</div>
				</div>
				<div class="row m-3">
					<label class="col-form-label col-sm-2 col-12" asp-for="GiftPack.Quantity"></label>
					<div class="col">
						<input class="form-control" type="number" asp-for="GiftPack.Quantity" />
					</div>
				</div>
				<div class="d-grid">
					<input class="btn btn-light shadow-sm" type="submit" value="submit" />
				</div>

				<div asp-validation-summary="All"></div>
			</form>
		</div>
	</div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

